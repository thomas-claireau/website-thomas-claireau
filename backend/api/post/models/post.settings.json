{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "header": {
      "type": "component",
      "repeatable": false,
      "component": "global.header"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "technologies": {
      "collection": "technologie"
    },
    "main_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "content": {
      "type": "richtext"
    },
    "slug": {
      "type": "string"
    },
    "time": {
      "type": "integer",
      "default": 5
    }
  }
}

{# Layout : none (three) / one / two / full #}
{% set layout = layout is defined ? layout : false %}
{% set posts = posts is defined and posts|length ? posts : false %}

{% if posts %}
	<div class="posts {{ layout }}">
		{% set counter = 0 %}
		{% for post in posts %}
			<article class="post {{ layout == 'full' and counter % 6 == 0 ? 'large' : '' }}">
				<div class="thumbnail">
					<img src="https://picsum.photos/1920/1080" alt="">
				</div>
				<div class="content">
					<span class="tags">
						Javascript, PHP
					</span>
					<h3>Créer un site Wordpress Headless de zéro</h3>
					<p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Magni nulla, beatae maxime, quo fugiat sapiente et veniam ducimus magnam culpa omnis natus voluptatem possimus</p>
					<div class="author">
						<div class="avatar">
							<img src="/img/memoji.png" alt="">
						</div>
						<div class="infos">
							<h4>Thomas Claireau</h4>
							<div>
								<span class="date">
									17 Juin 2021
								</span>
								<span class="time">
									2 min read
								</span>
							</div>
						</div>
					</div>
				</div>
			</article>
			{% set counter = counter + 1 %}
		{% endfor %}
	</div>
{% endif %}

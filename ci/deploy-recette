#!/bin/sh
rsync -az -O --force --delete --progress --exclude-from=".rsyncignore" -e "ssh -p $PORT" ./ "$USERNAME"@"$HOST":/var/www/recette.thomas-claireau.com
ssh -p $PORT $USERNAME@$HOST "
	cd $PROJECT && npm install && npm run build;
	cd $PROJECT/backend && npm install && NODE_ENV=production npm run build;
	pm2 restart recette-frontend
	pm2 restart recette-backend
	exit;
"

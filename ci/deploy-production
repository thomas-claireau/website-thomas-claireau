#!/bin/sh
rsync -az -O --force --delete --progress --exclude-from=".rsyncignore" -e "ssh -p $PORT" ./ "$USERNAME"@"$HOST":/var/www/html
ssh -p $PORT $USERNAME@$HOST "
	cd /var/www/html && npm install && npm run build;
	cd /var/www/html/backend && npm install && NODE_ENV=production npm run build;
	pm2 restart frontend
	pm2 restart backend
	exit;
"
